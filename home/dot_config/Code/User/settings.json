{
    "github.copilot.nextEditSuggestions.enabled": true,
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
    "window.titleBarStyle": "custom",
    // Tabs & Indentation
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    // Whitespace
    "editor.renderWhitespace": "all",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "editor.renderFinalNewline": "on",
    // Formatting
    "editor.formatOnSave": true,
    // Optional: Make trailing whitespace more visible
    "workbench.colorCustomizations": {
        "editorWhitespace.foreground": "#ff000080"
    },
    "workbench.iconTheme": "vscode-icons",
    "github.copilot.advanced": {

    },
    "mcp.servers": [
        {
            "name": "VS Code",
            "command": "node",
            "args": [
                "${extensionPath:semanticworkbenchteam.mcp-server-vscode}/dist/main.js"
            ],
            "options": {
                "cwd": "${extensionPath:semanticworkbenchteam.mcp-server-vscode}"
            }
        },
        {
            "name": "Local Memory Server",
            "command": "node",
            "args": [
                "${env:HOME}/.local/share/mcp-servers/memory/dist/main.js"
            ],
            "options": {
                "cwd": "${env:HOME}/.local/share/mcp-servers/memory"
            }
        },
        {
            "name": "GitHub MCP Server",
            "command": "node",
            "args": [
                "${env:HOME}/.local/share/mcp-servers/github/dist/main.js"
            ],
            "options": {
                "cwd": "${env:HOME}/.local/share/mcp-servers/github"
            }
        }
    ]
}
